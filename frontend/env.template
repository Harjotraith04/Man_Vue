# Frontend Environment Variables Template
# Copy this file to .env and fill in your actual values

# API Configuration
VITE_API_URL=http://localhost:4000/api

# Stripe Payment Gateway
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_51234567890abcdef...

# Cloudinary Image Management
VITE_CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
VITE_CLOUDINARY_UPLOAD_PRESET=your-upload-preset

# Google OAuth (if needed for frontend)
VITE_GOOGLE_CLIENT_ID=your-google-client-id

# Application Configuration
VITE_APP_NAME=ManVue
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Men's Fashion E-Commerce Platform

# Feature Flags (optional)
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_AR_VR=true
VITE_ENABLE_VOICE_SEARCH=true
VITE_ENABLE_IMAGE_SEARCH=true

# Development Configuration
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info

# Analytics (optional)
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Social Media (optional)
VITE_FACEBOOK_APP_ID=your-facebook-app-id
VITE_TWITTER_HANDLE=@manvue

# Contact Information
VITE_CONTACT_EMAIL=support@manvue.com
VITE_CONTACT_PHONE=+1-555-0123

# Legal
VITE_PRIVACY_POLICY_URL=https://manvue.com/privacy
VITE_TERMS_OF_SERVICE_URL=https://manvue.com/terms
