# Backend Environment Variables Template
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=4000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/manvue
# For MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/manvue?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:4000/api/auth/google/callback

# Cloudinary Configuration (for image storage)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret
CLOUDINARY_UPLOAD_PRESET=your-upload-preset

# AI Configuration (Google Gemini)
GEMINI_API_KEY=your-gemini-api-key

# Payment Gateway Configuration (Stripe)
STRIPE_SECRET_KEY=sk_test_51234567890abcdef...
STRIPE_PUBLISHABLE_KEY=pk_test_51234567890abcdef...
STRIPE_WEBHOOK_SECRET=whsec_1234567890abcdef...

# Kaggle Dataset Import (optional)
KAGGLE_USERNAME=your_kaggle_username
KAGGLE_KEY=your_kaggle_api_key

# Email Configuration (optional - for future features)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@manvue.com

# Redis Configuration (optional - for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# Application Configuration
APP_NAME=ManVue Backend
APP_VERSION=1.0.0
APP_DESCRIPTION=Men's Fashion E-Commerce API

# Admin Configuration
ADMIN_EMAIL=admin@manvue.com
ADMIN_PASSWORD=admin123
ADMIN_NAME=Admin User

# Product Configuration
DEFAULT_PRODUCT_LIMIT=20
MAX_PRODUCT_LIMIT=100
DEFAULT_PRODUCT_SORT=createdAt

# Order Configuration
ORDER_STATUSES=pending,processing,shipped,delivered,cancelled
DEFAULT_ORDER_STATUS=pending

# Analytics Configuration (optional)
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=365

# Webhook Configuration
WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRY_ATTEMPTS=3

# Development Configuration
DEBUG_MODE=false
VERBOSE_LOGGING=false
HOT_RELOAD=true

